@model CookingRecipeWebsite.Models.Recipe

@{
    ViewData["Title"] = @Model.Title;
}

<h1>@Model.Title</h1>
<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImagePath" class="img-fluid" alt="@Model.Title" />
    </div>
    <div class="col-md-6">
        <h3>Nguyên liệu</h3>
        <p>@Model.Ingredients</p>
        <h3>Hướng dẫn</h3>
        <p>@Model.Instructions</p>
    </div>
</div>
<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Quay lại</a>

@section Scripts {
    <script>
        // JavaScript để xử lý xác nhận xóa
        document.querySelectorAll('.delete-form').forEach(form => {
            form.addEventListener('submit', function (event) {
                const title = this.getAttribute('data-title');
                if (!confirm(`Bạn có chắc muốn xóa công thức "${title}" không?`)) {
                    event.preventDefault();
                }
            });
        });
    </script>
}