@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="cozy-card mx-auto mt-5" style="max-width: 500px;">
    <div class="card-body">
        <h1 class="cozy-title text-center">Đăng nhập</h1>
        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="email" class="cozy-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" name="email" class="form-control cozy-input" />
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="password" class="cozy-label">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" name="password" class="form-control cozy-input" />
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="cozy-error alert alert-danger">@Html.ValidationSummary()</div>
            }
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn cozy-btn cozy-btn-login">Đăng nhập</button>
                <a asp-action="Register" class="btn cozy-btn cozy-btn-register">Đăng ký</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}