<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nấu ăn cùng tôi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Lobster&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CookingRecipeWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm cozy-navbar">
            <div class="container-fluid">
                <a class="navbar-brand cozy-logo" asp-area="" asp-controller="Home" asp-action="Index">Nấu ăn cùng tôi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link cozy-nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Trang chủ</a>
                        </li>
                         @if (ViewBag.UserId != null)
                        {
                        <li class="nav-item">
                            <a class="nav-link cozy-nav-link" asp-area="" asp-controller="Home" asp-action="AddCategory"><i class="bi bi-list-ul"></i> Quản lý danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link cozy-nav-link" asp-area="" asp-controller="Home" asp-action="Statistics"><i class="bi bi-bar-chart"></i> Thống kê</a>
                        </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (ViewBag.UserId != null)
                        {
                            <span class="navbar-text cozy-user me-3">Xin chào, @ViewBag.UserEmail</span>
                            <li class="nav-item">
                                <a class="nav-link cozy-nav-link" asp-area="" asp-controller="Home" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link cozy-nav-link" asp-area="" asp-controller="Home" asp-action="Login"><i class="bi bi-person"></i> Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link cozy-nav-link" asp-area="" asp-controller="Home" asp-action="Register"><i class="bi bi-person-plus"></i> Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="cozy-footer border-top">
        <div class="container text-center">
            <p>© 2025 - Nấu ăn cùng tôi</p>
            <p class="cozy-slogan">Khám phá niềm vui nấu ăn mỗi ngày!</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>